<h1> Update a Power! </h1>
<% if @errors %>
  <% @errors.each do |e| %>
  <p><%= e %></p>
  <% end %>    
<% end %>

<%= form_for @power do |f| %>
    Name: <%= f.text_field :name %>
    Description: <%= f.text_area :description, size: "10x10"%><br>
    <% @heroines.each do |h| %>
        <%= h.name %>
        <%= f.check_box :heroines, { multiple: true }, h, :id %> <br>
    <% end %>
    <%= f.submit "Update" %>
<% end %>



